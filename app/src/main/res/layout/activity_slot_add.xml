<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SlotAdd"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:background="@drawable/mme_bg_dialog"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mme_bg_dialog_header"
        android:backgroundTint="#f2f2f2"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:fontFamily="@font/semibold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/get_more_spin"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgColsed"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:importantForAccessibility="no"
            android:minHeight="48dp"
            android:onClick="CancleData"
            android:padding="4dp"
            android:src="@drawable/mme_icon_close"
            app:tint="@color/black" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/ll20PAY"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/mme_bg_rounded_gray"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="UselessParent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/dimen_10dp">

                        <TextView
                            android:id="@+id/tv20Disount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/semibold"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="@string/_0_discount"
                            android:textColor="#d50000"
                            android:textSize="@dimen/_9ssp" />

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:gravity="center"
                            android:importantForAccessibility="no"
                            android:src="@drawable/mme_icon_coin_20"
                            tools:ignore="ImageContrastCheck" />

                        <TextView
                            android:id="@+id/tv20SpinCount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/regular"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="5 Spin"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_9ssp" />

                        <LinearLayout
                            android:id="@+id/tv20Payment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/mme_bg_app_btn_rounded"
                            android:clickable="true"
                            android:orientation="vertical"
                            tools:ignore="TouchTargetSizeCheck">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv20spinValueDiscount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginBottom="5dp"
                                        android:fontFamily="@font/semibold"
                                        android:gravity="center"
                                        android:includeFontPadding="false"
                                        android:text="RS.100"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_10ssp"
                                        tools:ignore="TooDeepLayout" />

                                    <View
                                        android:layout_width="wrap_content"
                                        android:layout_height="1dp"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="40dp"
                                        android:layout_marginRight="40dp"
                                        android:background="@color/white" />
                                </FrameLayout>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv20spinPurchase"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="5dp"
                                android:fontFamily="@font/semibold"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:text="RS.100"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10ssp" />
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll50PAY"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@drawable/mme_bg_rounded_gray"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="UselessParent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/dimen_10dp">

                        <TextView
                            android:id="@+id/tv50Disount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/semibold"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="0% Discount"
                            android:textColor="#d50000"
                            android:textSize="@dimen/_9ssp" />

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:gravity="center"
                            android:importantForAccessibility="no"
                            android:src="@drawable/mme_icon_coin_50"
                            tools:ignore="ImageContrastCheck" />

                        <TextView
                            android:id="@+id/tv50SpinCount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/regular"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="5 Spin"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_9ssp" />

                        <LinearLayout
                            android:id="@+id/tv50Payment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/mme_bg_app_btn_rounded"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv50spinValueDiscount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginBottom="5dp"
                                        android:fontFamily="@font/semibold"
                                        android:gravity="center"
                                        android:includeFontPadding="false"
                                        android:text="RS.100"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_10ssp" />

                                    <View
                                        android:layout_width="wrap_content"
                                        android:layout_height="1dp"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="40dp"
                                        android:layout_marginRight="40dp"
                                        android:background="@color/white" />
                                </FrameLayout>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv50spinPurchase"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="5dp"
                                android:fontFamily="@font/semibold"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:text="RS.100"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10ssp" />
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/ll100PAY"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/mme_bg_rounded_gray"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="UselessParent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/dimen_10dp">

                        <TextView
                            android:id="@+id/tv100Disount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/semibold"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="0% Discount"
                            android:textColor="#d50000"
                            android:textSize="@dimen/_9ssp" />

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:gravity="center"
                            android:importantForAccessibility="no"
                            android:src="@drawable/mme_icon_coin_100"
                            tools:ignore="ImageContrastCheck" />

                        <TextView
                            android:id="@+id/tv100SpinCount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/regular"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="5 Spin"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_9ssp" />

                        <LinearLayout
                            android:id="@+id/tv100Payment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/mme_bg_app_btn_rounded"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    tools:ignore="UselessParent">

                                    <TextView
                                        android:id="@+id/tv100spinValueDisocunt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginBottom="5dp"
                                        android:fontFamily="@font/semibold"
                                        android:gravity="center"
                                        android:includeFontPadding="false"
                                        android:text="RS.100"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_10ssp" />

                                    <View
                                        android:layout_width="wrap_content"
                                        android:layout_height="1dp"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="40dp"
                                        android:layout_marginRight="40dp"
                                        android:background="@color/white" />
                                </FrameLayout>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv100spinPurchase"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="5dp"
                                android:fontFamily="@font/semibold"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:text="₹ 500"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10ssp" />
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll500PAY"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@drawable/mme_bg_rounded_gray"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="UselessParent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/dimen_10dp">

                        <TextView
                            android:id="@+id/tv500Disount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/semibold"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="0% Discount"
                            android:textColor="#d50000"
                            android:textSize="@dimen/_9ssp" />

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:gravity="center"
                            android:importantForAccessibility="no"
                            android:src="@drawable/mme_icon_coin_500"
                            tools:ignore="ImageContrastCheck" />

                        <TextView
                            android:id="@+id/tv500SpinCount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/regular"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="5 Spin"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_9ssp" />

                        <LinearLayout
                            android:id="@+id/tv500Payment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/mme_bg_app_btn_rounded"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv500spinValueDiscont"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginBottom="5dp"
                                        android:fontFamily="@font/semibold"
                                        android:gravity="center"
                                        android:includeFontPadding="false"
                                        android:text="RS.100"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_10ssp" />

                                    <View
                                        android:layout_width="wrap_content"
                                        android:layout_height="1dp"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="40dp"
                                        android:layout_marginRight="40dp"
                                        android:background="@color/white" />
                                </FrameLayout>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv500spinPurchase"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="5dp"
                                android:fontFamily="@font/semibold"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:text="₹ 1000"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10ssp" />
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
