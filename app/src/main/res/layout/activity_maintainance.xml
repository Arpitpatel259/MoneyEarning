<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Maintainance_Page">

    <ImageView
        android:id="@+id/imageMaintenance"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_500sdp"
        android:layout_centerHorizontal="true"
        android:layout_margin="30sp"
        android:src="@drawable/app_maintenance"
        android:importantForAccessibility="no" />

    <TextView
        android:id="@+id/textMaintenanceMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageMaintenance"
        android:layout_margin="@dimen/_20sdp"
        android:fontFamily="@font/josefinsans_bold"
        android:gravity="center_horizontal"
        android:text="@string/Maintenance"
        android:textColor="@color/purple_700"
        android:textSize="18sp" />

</RelativeLayout>
